;------------------------------------------------
; pops multiple times in REVERSE order
;------------------------------------------------
%macro  	_mrpop 1-* 
		%rep %0 
		%rotate -1 
		pop     %1 
		%endrep 

%endmacro
;------------------------------------------------

;------------------------------------------------
; pushes multiple times in NORMAL order
;------------------------------------------------
%macro		_mpush 1-*		
		%rep %0 
		push    %1 
		%rotate 1 
		%endrep 

%endmacro
